# Authentication
JWT_SECRET_KEY=your-random-secret-key-change-in-production
JWT_EXPIRATION_DAYS=7
# USERS format: email1:password1,email2:password2
USERS=user1@example.com:password1,user2@example.com:password2

# Cookie Settings (for local development)
COOKIE_SECURE=false
COOKIE_SAMESITE=lax

# Database (Railway provides this automatically)
DATABASE_URL=postgresql://user:password@host:5432/dbname

# API Keys
MANUS_API_KEY=your_manus_api_key
ANTHROPIC_API_KEY=your_claude_api_key

# Email Configuration (required for notifications)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your_sendgrid_api_key
FROM_EMAIL=noreply@yourapp.com

# Optional: Disable emails in development
EMAIL_ENABLED=true

# Application Configuration
BASE_URL=http://localhost:8000
MANUS_RATE_LIMIT=5
MANUS_WEBHOOK_URL=http://localhost:8000/webhooks/manus
JOB_TIMEOUT_HOURS=12
STREAM_BATCH_SIZE=100

# Railway Configuration (automatically set by Railway)
PORT=8000

# Production Settings (set these in Railway dashboard)
# BASE_URL=https://your-app.up.railway.app
# MANUS_WEBHOOK_URL=https://your-app.up.railway.app/webhooks/manus
# COOKIE_SECURE=true
